pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh 'cd coit-frontend && npm install && npm run build'
            }
        }
        stage('Build Docker Image') {  
            steps{    
	             sh '''cd coit-frontend
                           docker build -t vijayakurra/coit-frontend:${APP_VERSION} . -f Dockerfile-multistage'''
	             echo 'Build Image Completed'                
              } 
           }
    }
}
