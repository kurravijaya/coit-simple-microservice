pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh 'cd coit-frontend && npm install && npm run build'
            }
        }
        stage('Build Docker Image') {  
            steps{    
	             sh 'docker build -f Dockerfile-multistage -t vijayakurra/coit-frontend:latest /var/lib/jenkins/workspace/JenkinFile/coit-frontend/' 
	             echo 'Build Image Completed'                
              } 
           }
    }
}
